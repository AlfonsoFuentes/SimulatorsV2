<div class="conveyor-wrapper" style="width: 100%; height: 65px; overflow: hidden; background: rgba(33, 150, 243, 0.05); border-radius: 12px; margin-bottom: 8px;">
    <svg width="100%" height="100%" viewBox="0 0 1000 60" preserveAspectRatio="xMinYMid slice" xmlns="http://www.w3.org/2000/svg">
        <defs>
            <linearGradient id="suavitelGrad" x1="0%" y1="0%" x2="100%" y2="50%">
                <stop offset="0%" style="stop-color:#81D4FA;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#039BE5;stop-opacity:1" />
            </linearGradient>
            <linearGradient id="beltGrad" x1="0%" y1="100%" x2="0%" y2="0%">
                <stop offset="0%" style="stop-color:#757575;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#9E9E9E;stop-opacity:1" />
            </linearGradient>
        </defs>

        <rect x="0" y="52" width="2000" height="6" fill="url(#beltGrad)" rx="2" />

        <g class="moving-bottles">
            @* Dibujamos muchas botellas para cubrir pantallas ultra-anchas *@
            @for (int i = 0; i < 15; i++)
            {
                var offset = i * 150;
                <g transform="translate(@offset, 5)">
                    <path d="M 15,45 C 5,38 5,23 15,16 L 18,10 L 32,10 L 35,16 C 45,23 45,38 35,45 Z"
                          fill="url(#suavitelGrad)" stroke="#fff" stroke-width="0.5" />
                    <rect x="18" y="4" width="14" height="6" rx="1" fill="#01579B" />
                    <rect x="18" y="22" width="14" height="10" rx="1" fill="#fff" opacity="0.5" />
                </g>
            }
        </g>
    </svg>
</div>

<style>
    .moving-bottles {
        /* La animación ahora es más robusta */
        animation: conveyorMove 4s linear infinite;
    }

    /* Usamos @@ para evitar el error de Razor que viste en la imagen_5756e3.png */
    @@keyframes conveyorMove {
        from {
            transform: translateX(0);
        }

        to {
            /* Movemos exactamente la distancia de una botella (150px) para que el bucle sea infinito */
            transform: translateX(-150px);
        }
    }
</style>

<style>
    .moving-bottles {
        animation: conveyorBelt 12s linear infinite;
    }

    /* Color inicial por defecto */
    .bottle-body {
        fill: url(#blueGrad);
    }

    /* 2. ANIMACIONES DE COLOR */

    /* Secuencia 1: Cambia cada 4 segundos */
    .color-cycle-1 {
        animation: colorChange1 16s step-end infinite;
    }

    /* Secuencia 2: Cambia cada 5 segundos (para dar variedad) */
    .color-cycle-2 {
        animation: colorChange2 20s step-end infinite;
    }

    /* Keyframes para el movimiento (sin cambios) */
    @@keyframes conveyorBelt {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(220px);
        }
    }

    /* Keyframes para los colores. 'step-end' hace que el cambio sea brusco, como un nuevo lote */
    @@keyframes colorChange1 {
        0% {
            fill: url(#blueGrad);
        }

        25% {
            fill: url(#pinkGrad);
        }

        50% {
            fill: url(#yellowGrad);
        }

        75% {
            fill: url(#purpleGrad);
        }
    }

    @@keyframes colorChange2 {
        0% {
            fill: url(#purpleGrad);
        }

        33% {
            fill: url(#blueGrad);
        }

        66% {
            fill: url(#yellowGrad);
        }
    }
</style>
