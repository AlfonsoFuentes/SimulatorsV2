@using GeminiSimulator.NewFilesSimulations.PackageLines

<MudPaper Elevation="2" Class="pa-4 mt-2" Style="border-left: 6px solid #594ae2; background-color: #f5f5f5;">
    <div class="d-flex align-center">
        <MudIcon Icon="@Icons.Material.Filled.Storage" Style="color: #594ae2;" Class="mr-2" />
        <MudText Typo="Typo.subtitle2" Style="font-weight: 900;">SUPPLY SOURCE: @Report.WipName</MudText>
    </div>
    
    <div class="d-flex align-center justify-space-between mt-2">
        <div style="width: 70%">
            <MudProgressLinear Color="@(Report.WipLevelKg < 1000 ? Color.Warning : Color.Primary)"
                               Value="@Report.WipLevelKg" Max="5000" Size="Size.Medium" Class="rounded-lg" />
        </div>
        <MudText Typo="Typo.body2" Style="font-weight: 700;">@Report.WipLevelKg.ToString("N0") kg</MudText>
    </div>
</MudPaper>

@code {
    [Parameter] public ProductionOrderReport Report { get; set; } = null!;
}