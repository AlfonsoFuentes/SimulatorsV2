@* Componente: LineViabilityCard.razor *@
<MudPaper Elevation="0" Outlined="true" Class="pa-4 mb-6" 
          Style="@($"border-left: 8px solid {(Line.IsLineViable ? "#4CAF50" : "#F44336")}; background: #fafafa;")">
    
    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
        <MudText Typo="Typo.h6" Style="font-weight: bold;">@Line.LineName.ToUpper()</MudText>
        <MudChip T=string Color="@(Line.IsLineViable ? Color.Success : Color.Error)" Variant="Variant.Text" Size="Size.Small">
            @(Line.IsLineViable ? "READY" : "BLOCKED")
        </MudChip>
    </MudStack>

    <MudDivider Class="my-3" />

    @foreach (var order in Line.Orders)
    {
        <OrderViabilitySection Order="order" />
    }
</MudPaper>

    @code {
    [Parameter] public GeminiSimulator.NewFilesSimulations.Context.CheckAvailability.LineReport Line { get; set; } = new();
}