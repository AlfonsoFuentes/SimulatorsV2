




<TableTemplate TValue="SKULineDTO"
               AddNew="AddNew"
               DisableAdd=@DisableAdd
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="@TableLegend">
    <ColumnsTemplate>
        <SelectColumn T="SKULineDTO" />
        <PropertyColumn Property="x => x.SKUCode" Title="SKU Code" TProperty="string" T="SKULineDTO" />
        <PropertyColumn Property="x => x.SKUName" Title="Descripcion" TProperty="string" T="SKULineDTO" />
        <PropertyColumn Property="x => x.BackBoneM_Number" Title="Product" TProperty="string" T="SKULineDTO" />
        <PropertyColumn Property="x => x.PackageType.ToString()" Title="Package Type" TProperty="string" T="SKULineDTO" />
        <PropertyColumn Property="x => x.LineSpeed.ToString()" Title="SKU velocity" TProperty="string" T="SKULineDTO" />
        <TemplateColumn CellClass="d-flex justify-end" T="SKULineDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.SKUName}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.SKUName}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>

