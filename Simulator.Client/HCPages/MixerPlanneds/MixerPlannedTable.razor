@using Simulator.Shared.Models.HCs.MixerPlanneds




<TableTemplate TValue="MixerPlannedDTO"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="MixerPlanneds List">
    <ColumnsTemplate>
        <SelectColumn T="MixerPlannedDTO" />
        <PropertyColumn Property="x => x.MixerName" Title="Mixer" TProperty="string" T="MixerPlannedDTO" />
        <PropertyColumn Property="x => x.BackBoneName" Title="Backbone" TProperty="string" T="MixerPlannedDTO" />
        <PropertyColumn Property="x => x.CurrentMixerState.ToString()" Title="State" TProperty="string" T="MixerPlannedDTO" />
        <PropertyColumn Property="x => x.MixerLevel.ToString()" Title="Current level" TProperty="string" T="MixerPlannedDTO" />
        <PropertyColumn Property="x => x.ProducingToName" Title="Producing To" TProperty="string" T="MixerPlannedDTO" />
        <TemplateColumn CellClass="d-flex justify-end" T="MixerPlannedDTO">
           
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.MixerDTO!.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.MixerDTO!.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


